          "event": [
            {
              "listen": "test",
              "script": {
                "id": "e91b14a5-03bb-43a9-9996-01b8719d672e",
                "exec": [
                  "// Parse response JSON safely\r",
                  "let res = pm.response.json();\r",
                  "\r",
                  "// Save access token\r",
                  "if (res.data && res.data.accessToken) {\r",
                  "    pm.environment.set(\"access_token\", res.data.accessToken);\r",
                  "    console.log(\"Access token saved successfully\");\r",
                  "}\r",
                  "\r",
                  "// Save refresh token\r",
                  "if (res.data && res.data.refreshToken) {\r",
                  "    pm.environment.set(\"refresh_token\", res.data.refreshToken);\r",
                  "    console.log(\"Refresh token saved successfully\");\r",
                  "}\r",
                  "\r",
                  "// Verify status\r",
                  "pm.test(\"Login API returned success status\", function () {\r",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);\r",
                  "});\r",
                  ""
                ],
